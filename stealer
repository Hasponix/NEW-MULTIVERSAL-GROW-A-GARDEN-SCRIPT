local ReplicatedStorage = game:GetService("ReplicatedStorage")

local success, inventoryData = pcall(function()
    local DataService = require(ReplicatedStorage.Modules.DataService)
    return DataService:GetData().PetsData.PetInventory.Data
end)

if not success or not inventoryData then
    return
end

for uuid, petInfo in pairs(inventoryData) do
    if type(petInfo) == "table" and petInfo.PetData and petInfo.PetData.BaseWeight then
        local petType = tostring(petInfo.PetType)
        local baseWeight = tonumber(petInfo.PetData.BaseWeight)
        if baseWeight then
            print(petType .. " | Base Weight: " .. string.format("%.2f", baseWeight))
        end
    end
end
